{
    "compilerOptions": {
        "target": "es2020",
        "module": "CommonJS",
        "rootDir": "./src",
        "baseUrl": "./src",
        "paths": {},
        "outDir": "./build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "removeComments": true,
    },
    "include": ["src"],
    "exclude": ["node_modules", "build"]
}
